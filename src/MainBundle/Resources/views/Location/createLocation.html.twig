{% extends "::base.html.twig" %}

{% block title %}{{ 'create_locations.createLocation' | trans }}{% endblock %}

{% block body %}
    {{  parent() }}
    <div class="container container-table">
        <div class="row">
            <div class="col-md-4 col-sm-offset-4">
                  {{ form_start(form) }}
                <div class="form-group form-row">
                    {{ form_label(form.locationName) }}
                    {{ form_errors(form.locationName) }}
                    {{ form_widget(form.locationName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group form-row">
                    {{ form_label(form.url) }}
                    {{ form_errors(form.url) }}
                    {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="text-center">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-general'}}) }}
                    <div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}