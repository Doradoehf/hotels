{% extends "::base.html.twig" %}

{% block title %}{{ 'hotel.showHotel' | trans }}{% endblock %}

{% block body %}
    {{  parent() }}
    <div class="container">
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>{{ 'hotel.name' | trans }}</th>
                <th>{{ 'hotel.locations' | trans }}</th>
                <th>{{ 'hotel.users' | trans }}</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ hotel.current.name }}</td>
                    <td><a class="underline" href="{{ path('show_locations', {'hotelUrl': hotel.current.url}) }}">{{ 'hotel.showLocations' | trans }}</a></td>
                    <td><a class="underline" href="{{ path('show_hotel_users', {'externalId': hotel.current.externalId}) }}">{{ 'hotel.showUsers' | trans }}</a></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}